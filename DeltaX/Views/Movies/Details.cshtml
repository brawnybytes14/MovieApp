@model DeltaX.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="text-right">
                <a href="#">
                    <img width="400" height="210" src='@Url.Content(string.IsNullOrEmpty(Model.Poster)? "~/Images/Posters/dummyPoster.png" : Model.Poster)' alt="Poster">
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <h3 class="text-info"><b>@Model.Name (@Model.Year)</b></h3>

            <p>
                @Model.Plot
            </p>
            <p>
                <b> Producer:</b> @Model.Name
           <br>

                <b>Actors:</b> @String.Join(", ", Model.Actors.Select(p => p.Name).ToArray())

            </p>
         
        </div>
    </div>
</div>
<p>
    <b>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
        </b>
</p>
